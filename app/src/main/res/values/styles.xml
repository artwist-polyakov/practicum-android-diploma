<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>

    <style name="Text.Bold32">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="Text.Medium22">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Text.Medium16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Text.Regular16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Text.Regular12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!--Элемент списка вакансий, заголовок-->
    <style name="Text.Medium22.listElementHeader">
        <item name="android:color">?attr/mainTextColor</item>
    </style>

    <!--Элемент списка вакансий, описание-->
    <style name="Text.Regular16.listElementDescription">
        <item name="android:color">?attr/mainTextColor</item>
    </style>

    <!--Элемент списка вакансий, описание-->
    <style name="Text.Regular16.FilterElement">
        <item name="android:textColor">?attr/formsHintColor</item>
    </style>

    <!--Элемент списка местоположений активный-->
    <style name="Text.Regular16.listPlacesActive">
        <item name="android:color">?attr/mainTextColor</item>
    </style>

    <!--Элемент списка неактивный-->
    <style name="Text.Regular16.listPlacesInactive">
        <item name="android:color">?attr/mainTextColor</item>
    </style>

    <!--Заголовок раздела вакансий-->
    <style name="Text.Medium22.vacancyHeader">
        <item name="android:color">?attr/mainTextColor</item>
    </style>

    <!--Часть раздела вакансии-->
    <style name="Text.Medium16.vacancyChapter">
        <item name="android:color">?attr/mainTextColor</item>
    </style>

    <!--Содержимое части раздела вакансии-->
    <style name="Text.Regular16.vacancyContent">
        <item name="android:color">?attr/mainTextColor</item>
    </style>

    <!--Текст ошибки-->
    <style name="Text.Medium22.errorText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>


    <!--  В EditText понадобится настроить только padding  -->
    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:textColorHint">?attr/formsHintColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">?attr/formsHintColor</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--! в TextInputLayout обязательно включить атрибут app:placeholderText="Введите сумму" -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">?attr/formsBackgroundColor</item>
        <item name="hintTextAppearance">@style/Text.Hint</item>
        <item name="hintTextColor">?attr/formsHintColor</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxCornerRadiusTopStart">@dimen/edittext_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edittext_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edittext_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edittext_corner_radius</item>
        <item name="placeholderTextAppearance">@style/Text.Regular16.FilterElement</item>
        <item name="placeholderTextColor">?attr/formsHintColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">?attr/formsTextColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="colorControlActivated">?attr/formsActivatedHighlightColor</item>
        <item name="android:textColorHighlight">?attr/formsHintColor</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?attr/formsHintColor</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="hintTextAppearance">@style/Text.Hint</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputLayout.FilterItem">
        <item name="boxBackgroundColor">@color/formsBackground</item>
    </style>

    <style name="TextInputEditText.FilterInput">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:inputType">textFilter</item>
    </style>

    <style name="SearchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/formsHintColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">?attr/formsBackgroundColor</item>
        <item name="hintTextAppearance">@style/Text.Hint</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxCornerRadiusTopStart">@dimen/edittext_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edittext_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edittext_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edittext_corner_radius</item>
        <item name="placeholderTextAppearance">@color/gray</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="SearchInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/blackUniversal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:textColorHighlight">?attr/formsHintColor</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextAppearance">@style/Text.Hint</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:paddingHorizontal">@dimen/image_padding_medium</item>
        <item name="android:paddingVertical">@dimen/button_padding_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/round_corners_12</item>
    </style>

    <style name="Button.Blue">
        <item name="backgroundTint">?attr/selectButtonColor</item>
        <item name="android:textColor">?attr/selectButtonTextColor</item>
    </style>

    <style name="Button.Red">
        <item name="backgroundTint">?attr/dismissButtonColor</item>
        <item name="android:textColor">?attr/dismissButtonTextColor</item>
    </style>

    <style name="Button.Transparent">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">?attr/dismissButtonTextColor</item>
    </style>

    <style name="RadioButton">
        <item name="android:buttonTint">?attr/selectButtonColor</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.PopupMenu.Small</item>
        <item name="android:popupBackground">@drawable/dialog_background</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
</resources>
